<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-half is-narrow">
        <% if @tasks.blank? %>
          <div class="notification is-primary has-text-centered ">
            <p class="is-size-3">Hola, parece que no hay tareas disponibles.</p>
            <br>
            <a href="/new" class="button is-primary is-inverted">Nueva Tarea</a>
          </div>
        <%end%>
      </div>
    </div>
    <div class="columns is-multiline">
      <% @tasks.each do |task|%>
        <div class="column is-4">
          <div class="box">
            <article class="media">
              <div class="media-content">
                <div class="content has-text-centered">
                  <p>
                    <h2><strong>Tarea: <%=task['title'].blank? ? 'Sin nombre' : task['title']%></strong></h2>
                    <small>Estado: <%= task['done'] == false ? 'Incompleto' : 'Completado' %></small>
                    <br>
                  </p>
                </div>
                <hr>
                <nav class="level is-mobile center">
                  <div class="action-links">
                    <%if task['done'] == false%>
                    <a id="<%=task['id']%>-update" href="javascript:void(0);" class="level-item update-task">
                      <span class="icon is-medium"><i class="fa fa-check"></i></span>
                    </a>
                    <%end%>
                    <a id="<%=task['id']%>-delete" class="level-item danger delete-task">
                      <span class="icon is-medium"><i class="fa fa-trash"></i></span>
                    </a>
                  </div>
                </nav>
              </div>
            </article>
          </div>
        </div>
      <%end%>
    </div>    
  </div>
</section>